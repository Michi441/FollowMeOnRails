
<div class="container">
  <div class="row">

    <% @users.each do |u| %>

      <div class="col-md-4">
        <br>
        <br>
        
        <div class="card">
          <div class="card-header">
            <%= u.email %>
          </div>

          <div class="card-content text-center">

            <%= image_tag('patterns.jpg', width: "100%") %>


            <p class="lead">
              Followers: <%= u.followers_count %>
            </p>


            <%= link_to "View User", user_path(u.id), class: 'btn btn-primary' %>
          </div>
        </div>
      </div>


    <% end %>

  </div>
</div>
